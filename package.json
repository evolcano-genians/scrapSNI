{
  "name": "domain-tracker",
  "version": "1.0.0",
  "description": "Web domain tracking application using Electron and Playwright",
  "main": "src/main.js",
  "scripts": {
    "compile": "tsc",
    "watch": "tsc --watch",
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "node test.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:win:portable": "electron-builder --win portable --x64",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:mac:intel": "electron-builder --mac --x64",
    "build:mac:arm": "electron-builder --mac --arm64",
    "build:linux": "electron-builder --linux --x64",
    "build:all": "electron-builder -mwl",
    "dist:win": "npm run build:win",
    "dist:mac": "npm run build:mac",
    "dist:linux": "npm run build:linux",
    "dist:all": "npm run build:all",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "playwright",
    "domain-tracking"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  },
  "build": {
    "appId": "com.domaintracker.app",
    "productName": "Domain Tracker",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/playwright",
        "to": "playwright",
        "filter": ["**/*"]
      }
    ],
    "asarUnpack": [
      "resources/playwright/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Domain Tracker",
      "runAfterFinish": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    }
  }
}
